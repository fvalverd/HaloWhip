<resources>

	<style name="HaloWhipTheme" parent="@android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/HaloWhipTheme.ActionBar</item>
    </style>
    
    <style name="HaloWhipTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
	    <item name="android:background">@color/blue_light</item>
	    <item name="android:titleTextStyle">@style/HaloWhipTheme.ActionBar.TitleTextStyle</item>
	</style>
	
	<style name="HaloWhipTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Medium">
	    <item name="android:textColor">@color/white</item>
	    <item name="android:textSize">25sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:typeface">sans</item>
	</style>
	
	<!-- Colors  -->
	<color name="white">#FFFFFF</color>
	<color name="blue_light">#3A8FBD</color>

</resources>
